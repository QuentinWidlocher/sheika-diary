// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id            String    @id @default(uuid())
  slug          String    @unique
  title         String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  content       String
  pictures      String
  Pictures      Picture[]
}

model Picture {
  id            String    @id @default(uuid())
  file          String    @unique
  preview       String    @unique
  thumbnail     String    @unique
  entry         String
  Entry         Entry     @relation(fields: [entry], references: [id])
}